	<style>
		/* Carousel slide responsiveness */
		input[type="radio"]:nth-of-type(1):checked ~ .carousel-slide {
			transform: translateX(0);
		}
		input[type="radio"]:nth-of-type(2):checked ~ .carousel-slide {
			transform: translateX(-100%);
		}
		input[type="radio"]:nth-of-type(3):checked ~ .carousel-slide {
			transform: translateX(-200%);
		}
	
		/* Small screen carousel height */
		@media (max-width: 640px) {
			.carousel-container {
				height: 50vh;
			}
		}
	
		@media (min-width: 640px) and (max-width: 1024px) {
			.carousel-container {
				height: 60vh;
			}
		}
	</style>

<script>
	let slideIndex = 1;
	const totalSlides = 3;

	function showNextSlide() {
		slideIndex = (slideIndex % totalSlides) + 1;
		(document.getElementById('slide' + slideIndex) as HTMLInputElement).checked = true;
	}

	setInterval(showNextSlide, 2000); // Cambia cada 5 segundos
</script>
	
